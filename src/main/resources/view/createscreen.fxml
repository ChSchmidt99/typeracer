<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<GridPane styleClass="background" stylesheets="@style.css" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="title" text="Game creation" />
    <VBox alignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
        <TextField fx:id="username" promptText="Username" styleClass="userdata">
            <VBox.margin>
                <Insets top="30.0" />
            </VBox.margin>
        </TextField>
        <Button fx:id="createButton" text="New Game" onAction="#switchToGameLobby">
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Button>
    </VBox>
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="1920.0" minWidth="640.0" prefWidth="1280.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="200.0" minHeight="140.0" prefHeight="200.0" />
        <RowConstraints maxHeight="200.0" minHeight="180.0" prefHeight="200.0" />
    </rowConstraints>
</GridPane>
